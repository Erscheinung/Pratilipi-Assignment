<%- include ("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Pratilipi Stories!</h1>
            <p>Here's some cool stories yo</p>
        </div>
    </header>

    <div class="row">
            <div class="col-lg-12">
                <h3>Best stories</h3>
            </div>
        </div>

    <div class="row text-center" style="flex-wrap: wrap;">
            <% stories.forEach(function(story){ %>
                <div>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <div class="caption">
                                <h4><%= story.title %></h4>
                            </div>
                            <p>
                                <a href="/stories/<%= story._id%>" class="btn btn-primary">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>
</div>

<%- include ("../partials/footer") %>
